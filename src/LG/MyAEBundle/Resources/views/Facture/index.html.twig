{% extends "LGMyAEBundle::layout.html.twig" %}

{% block title %}
  Factures - {{ parent() }}
{% endblock %}

{% block lgmyae_body %}

  <h1 class="testAssetic">Gestion des factures</h1>

  <hr>

  <h2>Liste des factures <span class="small"><a href="{{ path('facture_add')}}">Ajouter une facture</a></span></h2>


  <table class="table table-hover">
    <thead>
      <tr>
        <th>Actions</th>
        <th>Numéro</th>
        <th>Client</th>
        <th>Date</th>
        <th>Total TTC</th>
        <th>Date pénalité</th>
      </tr>
    </thead>
    <tbody>
      {% for f in factures %}
      <tr>
        <td>
          <a href="{{ path('facture_edit', {'id': f.id})}}"><i class="fa fa-edit" aria-hidden="true"></i></a>
          <a href="{{ path('facture_view', {'id': f.id})}}"><i class="fa fa-eye" aria-hidden="true"></i></a>
          <a href="{{ path('facture_download_slug', {'slug': f.slug})}}"><i class="fa fa-download" aria-hidden="true"></i></a>
        </td>
        <td>{{ f.factureNumber }}</td>
        <td>{{ f.client.name }}</td>
        <td>{{ f.date|date('d/m/Y') }}</td>
        <td>{{ f.totalTTC }}€</td>
        <td>{{ f.penaliteDate|date('d/m/Y') }}</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>

{% endblock %}