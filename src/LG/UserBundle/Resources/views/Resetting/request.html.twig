{% trans_default_domain 'FOSUserBundle' %}


{% extends "LGUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
        <div class="form-group">
            <label for="username">{{ 'resetting.request.username'|trans }}</label>
            <input type="text" id="username" name="username" required="required" class="form-control" placeholder="Login" />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-default" id="_submit" name="_submit" >{{ 'resetting.request.submit'|trans }}</button>
        </div>
    </form>

{% endblock  %}

