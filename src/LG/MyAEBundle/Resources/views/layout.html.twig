{% extends "::layout.html.twig" %}

{% block title %}
{{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets '@LGMyAEBundle/Resources/public/css/myae.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts '@LGMyAEBundle/Resources/public/js/myae.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block menu %}
  {{ include("LGMyAEBundle::menu.html.twig") }}
{% endblock %}

{% block body %}

  {# On définit un sous-titre commun à toutes les pages du bundle, par exemple #}

  {# Gestion des flashbangs #}

  <div class="row">
  {% for message in app.session.flashbag.get('info') %}
    <div class="col-lg-12">
        <div class="alert alert-info alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <i class="fa fa-info-circle"></i>  <strong>Pour info </strong> {{ message }}
        </div>
    </div>
  {% endfor %}
  {% for message in app.session.flashbag.get('success') %}
    <div class="col-lg-12">
        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <i class="fa fa-check-circle"></i>  <strong>Yeepee ! </strong> {{ message }}
        </div>
    </div>
  {% endfor %}
  {% for message in app.session.flashbag.get('warning') %}
    <div class="col-lg-12">
        <div class="alert alert-warning alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <i class="fa fa-warning"></i>  <strong>Attention </strong> {{ message }}
        </div>
    </div>
  {% endfor %}
  {% for message in app.session.flashbag.get('danger') %}
    <div class="col-lg-12">
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <i class="fa fa-times-circle"></i>  <strong>Damned ! </strong> {{ message }}
        </div>
    </div>
  {% endfor %}
  </div>

  {% block lgmyae_body %}
  {% endblock %}

{% endblock %}