{% extends "LGMyAEBundle::layout.html.twig" %}

{% block title %}
  Clients - {{ parent() }}
{% endblock %}

{% block lgmyae_body %}

  <h1 class="testAssetic">Gestion des clients</h1>

  <hr>

  <h2>Liste des clients <span class="small"><a href="{{ path('client_add')}}">Ajouter un client</a></span></h2>


  <table class="table table-hover">
    <thead>
      <tr>
        <th>Actions</th>
        <th>Entreprise</th>
        <th>Nom du référent</th>
        <th>Date de dernière interraction</th>
        <th>Mail</th>
        <th>Téléphone</th>
        <th>Status de la relation</th>
      </tr>
    </thead>
    <tbody>
      {% for c in clients %}
      <tr>
        <td>
          <a href="{{ path('client_remove', {'id': c.id})}}"><i class="fa fa-trash" aria-hidden="true"></i></a>
          <a href="{{ path('client_edit', {'id': c.id})}}"><i class="fa fa-edit" aria-hidden="true"></i></a>
          <a href="{{ path('client_view', {'id': c.id})}}"><i class="fa fa-eye" aria-hidden="true"></i></a>
        </td>
        <td>{{ c.name }}</td>
        <td>{{ c.referentName }}</td>
        <td>{{ c.dateActif|date('d/m/Y') }}</td>
        <td>{{ c.mail }}</td>
        <td>{{ formatFrenchNumber(c.telephone) }}</td>
        <td>{{ c.status }}</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>

{% endblock %}